@{
    ViewData["Title"] = "Home Page";
}

@model List<Candy>

<table class="table table-bordered table-striped">
    <thead style="font-weight:bold">
        <tr>
            <td>Title</td>
            <td>Author</td>
            <td>Publisher</td>
            <td>Isbn</td>
            <td>Classification</td>
            <td>Category</td>
            <td>PageCount</td>
            <td>Price</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.Author</td>
                    <td>@x.Publisher</td>
                    <td>@x.Isbn</td>
                    <td>@x.Classification</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.PageCount</td>
                    <td>@x.Price</td>

                    <td><a asp-controller="Home" asp-action="Edit" asp-route-candyid="@x.CandyId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-candyid="@x.CandyId">Delete</a></td>
                </tr>
            }
    </tbody>
</table>
